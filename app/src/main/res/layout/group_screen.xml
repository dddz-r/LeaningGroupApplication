<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GroupScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/gs_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginLeft="5dp"
            android:text="카테고리">

        </TextView>

        <TextView
            android:id="@+id/gs_title"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textSize="14dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#33aabb"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="제목 입력"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/gs_writer"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:text="작성자"
            android:layout_marginRight="5dp"
            tools:layout_editor_absoluteX="329dp"
            tools:layout_editor_absoluteY="81dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView android:layout_width="match_parent" android:layout_height="220dp" >

        <TextView
        android:id="@+id/gs_content"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:text="내용입력"
        android:textSize="14dp"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="visible"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="123dp" />

        </ScrollView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gs_text1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#33aabb"
            android:text="이용자 수"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="389dp" />

        <TextView
            android:id="@+id/gs_numberOfUserNow"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="440dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:text="/"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="440dp" />

        <TextView
            android:id="@+id/gs_numberOfUserMax"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:inputType="number"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/gs_joinBtn"
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:layout_margin="2dp"
        android:text="참여"
        android:background="@drawable/buttonbordr2"/>

        <Button
            android:id="@+id/gs_cancelBtn"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_margin="2dp"
            android:text="취소"
            android:background="@drawable/buttonbordr2"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="378dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gs_text2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#33aabb"
            android:text="날짜"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="389dp" />

        <TextView
            android:id="@+id/gs_date"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:ems="10"
            android:inputType="date"
            android:text="날짜입력"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="440dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/gs_text3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#33aabb"
        android:text="시간"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="389dp" />

        <TextView
            android:id="@+id/gs_start_time"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:inputType="time"
            android:text="시작시간"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="440dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:text="~"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="440dp" />

        <TextView
            android:id="@+id/gs_end_time"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:inputType="time"
            android:text="종료시간"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="440dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#33aabb"
            android:text="댓글"
            android:textStyle="bold"
            android:id="@+id/gs_text4"/>

        <EditText
            android:id="@+id/gs_enterComments"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:inputType="textWebEditText|textMultiLine|text"
            android:hint="내용을 입력하세요"
            android:textSize="15dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_margin="2dp"
            android:text="확인"
            android:background="@drawable/buttonbordr2"
            android:id="@+id/gs_commentBtn"/>


    </LinearLayout>

    <ListView
        android:id="@+id/gs_commentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </ListView>


</LinearLayout>